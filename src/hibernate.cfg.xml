<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
    <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
    <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/zd</property>
    <property name="hibernate.connection.username">postgres</property>
    <property name="hibernate.connection.password">nope</property>
    <property name="hibernate.connection.autocommit">false</property>
    <property name="show_sql">false</property>
    <property name="format_sql">false</property>
    <property name="use_sql_comments">false</property>
    <property name="hibernate.transaction.factory_class">
      org.hibernate.engine.transaction.internal.jdbc.JdbcTransactionFactory
    </property>
    <property name="hibernate.hbm2ddl.auto">create-drop</property>
    <!-- List of XML mapping files -->
    <mapping resource="ZDUser.hbm.xml"/>
    <mapping resource="ZDTicket.hbm.xml"/>
    <mapping resource="ZDOrganisation.hbm.xml"/>
    <mapping resource="ZDGroupMembership.hbm.xml"/>
    <mapping resource="ZDTopic.hbm.xml"/>
    <mapping resource="ZDForum.hbm.xml"/>
    <mapping resource="ZDGroup.hbm.xml"/>
    <!-- Will never bother with these
    <mapping resource="Identity.hbm.xml"/>
    <mapping resource="Photo.hbm.xml"/>
    <mapping resource="Attachment.hbm.xml"/-->
  </session-factory>
</hibernate-configuration>
